<h1>New Book</h1>

<%= form_for @book do |f| %>
  <% if @book.errors.any? %>
  <div id="error_explanation">
<h2><%= pluralize(@book.errors.count, "error") %> This title has been taken. </h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
   
    <p>
      <%= f.label :author %><br>
      <%= f.text_field :author %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  <% end %>